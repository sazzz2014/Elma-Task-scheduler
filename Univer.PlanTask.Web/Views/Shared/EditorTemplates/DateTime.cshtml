@model DateTime?
@{
    var inputName = Html.ViewData.TemplateInfo.GetFullHtmlFieldName("");
    var value = Model.HasValue ? Model.Value.ToString("yyyy-MM-dd") : "";
}
<input type="datetime" name="@(inputName)" class="form-control datepicker1" value="@value" />

