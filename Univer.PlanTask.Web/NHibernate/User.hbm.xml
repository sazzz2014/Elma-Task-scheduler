<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
    namespace="Univer.PlanTask.Web.Models" assembly="Univer.PlanTask.Web">

  <class name="User" table="[User]">

    <!-- A 32 hex character is our surrogate key. It's automatically
            generated by NHibernate with the UUID pattern. -->
    <id name="Id">
      <generator class="native" />
    </id>

    <!-- A cat has to have a name, but it shouldn't be too long. -->
    <property name="Login">
      <column name="Login" length="50" not-null="true" />
    </property>
    <property name="Password" />
    <property name="FirstName" />
    <property name="SecondName" />
    <property name="BirthDay" />
    <property name="Status" />

    <set name="Tasks" lazy="true">
      <key column="UserId"/>
      <one-to-many class="Task" />
    </set>
    
  </class>

</hibernate-mapping>